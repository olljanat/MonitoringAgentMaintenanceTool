<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup> 
    <supportedRuntime version="v2.0.50727"/>
  </startup>
  <appSettings>
    <!-- Connection string to SCOM database -->
    <add key="SCOMdbConnectionString" value="Data Source=SqlServer;Initial Catalog=OperationsManager;Integrated Security=True;" />
    
    <!-- Disable close button -->
    <add key="DisableCloseButton" value="true" />

    <!-- Hide from taskbar -->
    <add key="HideFromTaskbar" value="true" />

    <!-- Show minize button -->
    <add key="ShowMinizeButton" value="false" />
    
    <!-- Location top right -->
    <add key="LocationTopRight" value="true" />
    
    <!-- Show/Hide debug section -->
    <add key="DebugMode" value="false" />

    <!-- Test UI without connecting to SCOM -->
    <add key="DemoMode" value="false" />
  </appSettings>
</configuration>
